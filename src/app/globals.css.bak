@tailwind base;
@tailwind components;
@tailwind utilities;

/* ==============================
   Global reset & root variables
   ============================== */

*,
*::before,
*::after {
    box-sizing: border-box;
}

html {
    height: 100%;
    -webkit-text-size-adjust: 100%;
    -moz-tab-size: 4;
    tab-size: 4;
    scroll-behavior: smooth;
    color-scheme: dark;
    /* default unless .dark is removed */
}

html:not(.dark) {
    color-scheme: light;
}

:root {
    /* Brand colors (used for gradients/borders) */
    --brand-from: #00d4ff;
    /* cyan-400 */
    --brand-to: #6c00ff;
    /* violet/fuchsia */
    --ring: rgba(34, 211, 238, 0.6);
    /* cyan-300/60 */

    /* Surfaces */
    --bg-dark: #0b0f1a;
    --fg-dark: #ffffff;

    --bg-light: #ffffff;
    --fg-light: #0b0f1a;

    /* Muted surfaces/borders */
    --muted-dark: rgba(255, 255, 255, 0.06);
    --muted-dark-border: rgba(255, 255, 255, 0.10);
    --muted-light: rgba(0, 0, 0, 0.03);
    --muted-light-border: rgba(0, 0, 0, 0.08);
}

body {
    min-height: 100%;
    margin: 0;
    background-color: var(--bg-dark);
    color: var(--fg-dark);
    font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
    line-height: 1.5;
}

/* Light mode base */
html:not(.dark) body {
    background-color: var(--bg-light);
    color: var(--fg-light);
}

/* Prevent iOS tap highlight blocks */
a,
button {
    -webkit-tap-highlight-color: transparent;
}

/* ==============================
   Typography (sane defaults)
   ============================== */

h1,
h2,
h3,
h4,
h5,
h6 {
    font-weight: 800;
    line-height: 1.15;
    letter-spacing: -0.01em;
    margin: 0 0 0.6rem 0;
    color: inherit;
}

h1 {
    font-size: clamp(1.75rem, 2.5vw + 1rem, 2.25rem);
}

h2 {
    font-size: clamp(1.5rem, 2vw + 0.75rem, 1.75rem);
}

h3 {
    font-size: clamp(1.25rem, 1.5vw + 0.6rem, 1.5rem);
}

p {
    margin: 0 0 1rem 0;
}

small {
    font-size: 0.875rem;
}

/* Links */
a {
    text-decoration: none;
    color: inherit;
}

a:hover {
    text-decoration: none;
}

/* Focus visibility (keyboard users) */
:focus-visible {
    outline: 2px solid var(--ring);
    outline-offset: 2px;
}

/* Code/kbd */
code,
kbd,
pre,
samp {
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
}

.kbd {
    @apply inline-block rounded border px-1.5 py-0.5 text-[11px];
}

html.dark .kbd {
    @apply border-white/20 bg-white/10 text-gray-200;
}

html:not(.dark) .kbd {
    border-color: rgba(0, 0, 0, 0.15);
    background: rgba(0, 0, 0, 0.04);
    color: #111827;
}

/* Lists */
ul,
ol {
    margin: 0 0 1rem 1.25rem;
    padding: 0;
}

/* Media elements */
img,
svg,
video,
canvas,
audio,
iframe,
embed,
object {
    display: block;
    max-width: 100%;
}

/* ==============================
   Project-level utilities
   ============================== */

.transition-surface {
    transition: background-color 200ms, color 200ms, border-color 200ms, box-shadow 200ms;
}

/* Gradient text for brand wordmark */
.text-brand-gradient {
    background-image: linear-gradient(90deg, var(--brand-from), var(--brand-to));
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
}

/* Gradient hairline (like under header) */
.brand-hairline {
    background-image: linear-gradient(90deg,
            rgba(34, 211, 238, .4),
            rgba(232, 121, 249, .4),
            rgba(168, 85, 247, .4));
}

/* Glass surface */
.glass {
    backdrop-filter: blur(8px);
    background-color: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.10);
}

html:not(.dark) .glass {
    background-color: rgba(255, 255, 255, 0.6);
    border-color: rgba(0, 0, 0, 0.08);
}

/* Card-like panel */
.card-like {
    border-radius: 0.75rem;
    border: 1px solid var(--muted-dark-border);
    background: var(--muted-dark);
    padding: 1rem;
    overflow: hidden;
    word-wrap: break-word;
    overflow-wrap: anywhere;
}

html:not(.dark) .card-like {
    border-color: var(--muted-light-border);
    background: var(--muted-light);
}

/* Panel */
.panel {
    border-radius: 1rem;
    border: 1px solid var(--muted-dark-border);
    background: var(--muted-dark);
    padding: 1rem;
    overflow: hidden;
    word-wrap: break-word;
    overflow-wrap: anywhere;
    position: relative;
}

html:not(.dark) .panel {
    border-color: var(--muted-light-border);
    background: var(--muted-light);
}

/* Headings in cards */
.panel h1,
.panel h2,
.panel h3,
.card-like h1,
.card-like h2,
.card-like h3 {
    text-wrap: balance;
    line-height: 1.2;
    margin-bottom: 0.75rem;
}

/* Numeric/KPI */
.panel .value,
.panel .metric,
.panel .stat,
.panel [data-metric],
.card-like .value,
.card-like .metric,
.card-like .stat,
.card-like [data-metric] {
    font-weight: 800;
    line-height: 1.1;
    font-size: clamp(1rem, 4vw, 1.75rem);
    overflow-wrap: anywhere;
    word-break: break-word;
}

/* Micro labels */
.panel .label,
.card-like .label {
    font-size: 0.85rem;
    opacity: 0.8;
}

/* ==============================
   Buttons (contrast per theme)
   ============================== */
.btn {
    @apply inline-flex items-center justify-center gap-2 rounded-md px-3 py-2 text-sm transition font-medium;
}

html.dark .btn-primary {
    @apply bg-cyan-300 hover:bg-cyan-200 text-black;
}

html:not(.dark) .btn-primary {
    @apply bg-cyan-600 hover:bg-cyan-700 text-white;
}

html.dark .btn-muted {
    @apply text-gray-200 bg-white/10 hover:bg-white/15;
}

html:not(.dark) .btn-muted {
    @apply text-slate-900 bg-black/5 hover:bg-black/10;
}

html.dark .btn-ghost {
    @apply text-gray-200 hover:bg-white/10;
}

html:not(.dark) .btn-ghost {
    @apply text-slate-900 hover:bg-black/5;
}

/* ==============================
   Inputs / selects / textareas
   ============================== */
.input,
.select,
.textarea {
    @apply w-full rounded-md border px-3 py-2 text-sm outline-none;
}

html.dark .input,
html.dark .select,
html.dark .textarea {
    @apply border-white/20 bg-white/5 text-gray-100 placeholder:text-gray-400;
}

html:not(.dark) .input,
html:not(.dark) .select,
html:not(.dark) .textarea {
    border-color: rgba(0, 0, 0, 0.12);
    background: #fff;
    color: #0b0f1a;
}

/* Table */
.table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.95rem;
}

.table th,
.table td {
    padding: 0.75rem 0.75rem;
    text-align: left;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
}

html:not(.dark) .table th,
html:not(.dark) .table td {
    border-color: rgba(0, 0, 0, 0.08);
}

/* Shadows */
.shadow-elev-1 {
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.25);
}

/* Scrollbars */
*::-webkit-scrollbar {
    width: 10px;
    height: 10px;
}

*::-webkit-scrollbar-track {
    background: transparent;
}

*::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.16);
    border-radius: 8px;
}

html:not(.dark) *::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.18);
}

/* Prose */
.prose {
    @apply text-gray-200;
}

.prose a {
    @apply text-cyan-300 no-underline hover:underline;
}

html:not(.dark) .prose {
    color: #0b0f1a;
}

html:not(.dark) .prose a {
    color: #0ea5e9;
}

/* Header/footer soft borders */
html:not(.dark) .border-muted {
    border-color: rgba(0, 0, 0, 0.08);
}

html.dark .border-muted {
    @apply border-white/10;
}

/* Theme toggle */
.theme-toggle {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.375rem;
    padding: 0.375rem 0.5rem;
    font-size: 0.875rem;
    line-height: 1;
    border-radius: 0.375rem;
    color: #e5e7eb;
    background: transparent;
    border: 1px solid transparent;
    transition: background-color 200ms, color 200ms, border-color 200ms, box-shadow 200ms, transform 100ms;
}

.theme-toggle:hover {
    background: rgba(255, 255, 255, 0.08);
}

.theme-toggle:active {
    transform: translateY(1px);
}

.theme-toggle:focus-visible {
    outline: 2px solid var(--ring);
    outline-offset: 2px;
}

.theme-toggle__icon {
    width: 18px;
    height: 18px;
    display: inline-block;
}

.theme-toggle__label {
    font-weight: 500;
}

html:not(.dark) .theme-toggle {
    color: #0f172a;
}

html:not(.dark) .theme-toggle:hover {
    background: rgba(0, 0, 0, 0.06);
}

/* Accessibility */
.skip-link {
    position: absolute;
    left: -9999px;
    top: 1rem;
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
    z-index: 60;
}

.skip-link:focus,
.skip-link:active {
    left: 1rem;
    outline: 2px solid var(--ring);
    outline-offset: 2px;
}

/* Member Zone safe text rules */
.panel *,
.card-like * {
    min-width: 0;
}

.panel h1,
.panel h2,
.panel h3,
.card-like h1,
.card-like h2,
.card-like h3 {
    overflow-wrap: anywhere;
    word-break: normal;
}

.panel .kpi,
.panel .number,
.panel .reading,
.card-like .kpi,
.card-like .number,
.card-like .reading {
    font-size: clamp(1rem, 3.5vw, 1.6rem);
    line-height: 1.1;
    overflow-wrap: anywhere;
    word-break: break-word;
}

.badge {
    border-radius: 0.375rem;
    padding: 0.125rem 0.5rem;
    font-size: 0.75rem;
    border: 1px solid var(--muted-dark-border);
    background: var(--muted-dark);
    color: inherit;
    position: relative;
    z-index: 1;
}

html:not(.dark) .badge {
    border-color: var(--muted-light-border);
    background: var(--muted-light);
}

.device-tile,
.tile,
.stat-tile {
    position: relative;
    isolation: isolate;
    overflow: hidden;
    border-radius: 0.75rem;
}

.tile .btn,
.device-tile .btn {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    max-width: 100%;
}

/* Pulse animation for AI Assistant */
@keyframes pulse-animation {

    0%,
    100% {
        box-shadow: 0 0 0 0 rgba(168, 85, 247, 0.7);
    }

    50% {
        box-shadow: 0 0 0 10px rgba(168, 85, 247, 0);
    }
}

.pulse-effect {
    animation: pulse-animation 2s infinite;
}

/* Light UI extras (if you have ui-light.css) */
@import "../styles/ui-light.css";

/* Form field base (explicit) */
@layer base {

    input,
    textarea,
    select {
        @apply w-full rounded-md border px-3 py-2 text-sm outline-none;
        @apply bg-gray-900 text-white border-gray-700;
    }

    input::placeholder,
    textarea::placeholder {
        @apply text-gray-400;
    }

    input:focus,
    textarea:focus,
    select:focus {
        @apply ring-2 ring-cyan-300/60 ring-offset-0;
    }

    input:disabled,
    textarea:disabled,
    select:disabled {
        @apply opacity-60 cursor-not-allowed;
    }

    html:not(.dark) input,
    html:not(.dark) textarea,
    html:not(.dark) select {
        @apply bg-white text-slate-900 border-slate-300;
    }

    html:not(.dark) input::placeholder,
    html:not(.dark) textarea::placeholder {
        @apply text-slate-500;
    }
}

/* === Safe text color overrides (pure CSS, no @apply) === */
/* In dark theme, force any “dark text” utilities to readable light text */
html.dark :is(.text-black, .text-gray-900, .text-slate-900, .text-neutral-900) {
  color: #e5e7eb !important; /* gray-200 */
}

/* In light theme, force any “white-ish text” utilities to readable dark text */
html:not(.dark) :is(.text-white, .text-gray-100, .text-slate-100, .text-neutral-100) {
  color: #0f172a !important; /* slate-900 */
}
html.dark .text-gray-900,
html.dark .text-slate-900,
html.dark .text-neutral-900 {
    color: #e5e7eb !important;
    /* gray-200 */
}

html:not(.dark) .text-white,
html:not(.dark) .text-gray-100,
html:not(.dark) .text-slate-100,
html:not(.dark) .text-neutral-100 {
    color: #0f172a !important;
    /* slate-900 */
}

/* === Safe text color overrides (no Tailwind class names in selectors) === */
/* Dark theme: всё, что по ошибке помечено как "тёмный текст", делаем светлым */
html.dark :where([class~="text-black"],
    [class~="text-gray-900"],
    [class~="text-slate-900"],
    [class~="text-neutral-900"]) {
    color: #e5e7eb !important;
    /* = gray-200 */
}

/* Light theme: всё, что по ошибке "белый текст", делаем тёмным */
html:not(.dark) :where([class~="text-white"],
    [class~="text-gray-100"],
    [class~="text-slate-100"],
    [class~="text-neutral-100"]) {
    color: #0f172a !important;
    /* = slate-900 */
}

/* Кнопки/интерактив: если в светлой теме фон чёрный/тёмный — делаем текст белым */
html:not(.dark) :where(button, a, .btn, .btn-primary, .btn-muted, .btn-ghost) {
    color: inherit;
}

html:not(.dark) :where(button.bg-black,
    a.bg-black,
    .btn.bg-black,
    .btn-primary.bg-black,
    .btn-muted.bg-black,
    .btn-ghost.bg-black,
    button.bg-gray-900,
    a.bg-gray-900) {
    color: #ffffff !important;
}

/* Поля ввода – ещё раз явно (чтобы было читаемо в обеих темах) */
html.dark :where(input, textarea, select) {
    color: #e5e7eb !important;
    background-color: #111827 !important;
    /* gray-900 */
    border-color: #374151 !important;
    /* gray-700 */
}

html:not(.dark) :where(input, textarea, select) {
    color: #0f172a !important;
    /* slate-900 */
    background-color: #ffffff !important;
    border-color: #cbd5e1 !important;
    /* slate-300 */
}